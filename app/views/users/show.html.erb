<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>User Name:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', topics_path %>

<h3><%= @user.name %>'s Comments</h3>
<ul>
<% @user.comments.each do |comment| %>
  <li><%= markdown(comment.content) %>
      on <%= link_to Topic.find(comment.topic_id).title, topic_path(comment.topic_id) %>
      <br/>
      category <%= Category.find(Topic.find(comment.topic_id)).subject %></li>
  <br/>
<% end %>
